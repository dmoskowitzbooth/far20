<div>
  <div>
    <h1>
      Fact finding #<%= @the_fact_finding.id %> details
    </h1>

    <div>
      <div>
        <a href="/fact_findings">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_fact_finding/<%= @the_fact_finding.id %>">
          Delete fact finding
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Emp
      </dt>
      <dd>
        <%= @the_fact_finding.emp_id %>
      </dd>

      <dt>
        Date
      </dt>
      <dd>
        <%= @the_fact_finding.date %>
      </dd>

      <dt>
        Time
      </dt>
      <dd>
        <%= @the_fact_finding.time %>
      </dd>

      <dt>
        Sup
      </dt>
      <dd>
        <%= @the_fact_finding.sup_id %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_fact_finding.notes %>
      </dd>

      <dt>
        To discuss
      </dt>
      <dd>
        <%= @the_fact_finding.to_discuss %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_fact_finding.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_fact_finding.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit fact finding
    </h2>

    <form action="/modify_fact_finding/<%= @the_fact_finding.id %>"  method="post" >
      <div>
        <label for="emp_id_box">
          Emp
        </label>

        <input type="text" id="emp_id_box" name="query_emp_id" value="<%= @the_fact_finding.emp_id %>">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date" value="<%= @the_fact_finding.date %>">
      </div>

      <div>
        <label for="time_box">
          Time
        </label>

        <input type="time" id="time_box" name="query_time" value="<%= @the_fact_finding.time %>">
      </div>
<% if @the_fact_finding.response = "Request Reschedule"%>
          <div>
        <label for="date2_box">
          Rescheduled Date
        </label>

        <input type="date" id="date_box2" name="query_date2">
      </div>

      <div>
        <label for="time2_box">
          Rescheduled Time
        </label>

        <input type="time" id="time2_box" name="query_time2">
      </div>
      <%end%>

      <div>
        <label for="sup_id_box">
          Sup
        </label>

        <input type="text" id="sup_id_box" name="query_sup_id" value="<%= @the_fact_finding.sup_id %>">
      </div>



      <div>
        <label for="to_discuss_box">
          To discuss
        </label>

        <input type="text" id="to_discuss_box" name="query_to_discuss" value="<%= @the_fact_finding.to_discuss %>">
      </div>
  
      <button>
        Update fact finding
      </button>
    </form>
  </div>
</div>

<hr>
   <div>
   <form action="/meetingnotes_fact_finding/<%= @the_fact_finding.id %>"  method="post" >
        <label for="notes_box">
         Meeting Notes
        </label>

<%if @the_fact_finding.notes.present?%>
        <textarea id="notes_box" name="query_notes"><%= @the_fact_finding.notes%></textarea>
<%else%>
  <textarea id="notes_box" name="query_notes"></textarea>
<%end%>
           <button>
        Save Meeting Notes
      </button>
        </form>
      </div>
  <hr>

   <form action="/insert_discipline" method="post">
      <div class="row">
      <div class="col">

        <label for="emp_id_box">
          Employee ID
        </label>

        <input type="text" id="emp_id_box" name="query_emp_id" class="form-control" value="<%=@the_fact_finding.emp_id%>">

      </div>

<div class="col">

    <label for="sup_id_box">Supervisor</label>
    <input type="text" id="sup_id_box" name="query_sup_id" class="form-control" value="<%=current_user.emp_id%>">

      </div>
      <div class="col">

    <label for="ffm_id_box">FFM ID</label>
    <input type="text" id="ffm_id_box" name="query_ffm_id" class="form-control" value="<%=@the_fact_finding.id%>">

      </div>
      </div>

      <div class="row">
      <div class="col">
        <label for="level_box">
          Level
        </label>

  <select id="level_box" name="query_level" class="form-select" style="width: 100%">
         <option>C&C</option>
          <option>DVW</option>
          <option>DWW</option>
          <option>FTW</option>
          <option>TERM</option>
          </select>
    </div>

        <div class="col">
        <label for="title_for_box">
          Title for
        </label>

        <input type="text" id="title_for_box" name="query_title_for" class="form-control" style="width: 100%" value="<%=@the_fact_finding.to_discuss%>">
      </div>
      </div>

      <div class="row">
        <div class="col">
        <label for="effective_box">
          Effective
        </label>

        <input type="date" id="effective_box" name="query_effective" class="form-control">
      </div>

      <div class="col"> 
        <label for="expires_box">
          Expires
        </label>

        <input type="date" id="expires_box" name="query_expires" class="form-control">
      </div>
</div>
      <div>
        <label for="reason_box">
          Reason
        </label>

        <textarea id="reason_box" name="query_reason" class="form-control"></textarea>
      </div>

      <div>
        <label for="expectations_box">
          Expectations
        </label>

        <textarea id="expectations_box" name="query_expectations" class="form-control"></textarea>
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes" class="form-control"></textarea>
      </div>

  

      <button type="submit" class="btn btn-warning">
        Issue discipline
      </button>
    </form>
